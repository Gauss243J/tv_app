<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List of TVs</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="/">Admin Dashboard</a>
        <ul class="navbar-nav ml-auto">
            <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
        </ul>
    </nav>

    <div class="container mt-4">
        <h2>List of TVs</h2>

        <!-- Search Form -->
        <form action="/listTVs" method="get" class="mb-4">
            <div class="form-row align-items-center">
                <div class="form-group col-md-9">
                    <input type="text" class="form-control" name="search" placeholder="Search by name or description" value="<%= search || '' %>">
                </div>
                <div class="form-group col-md-3">
                    <button type="submit" class="btn btn-primary btn-block">Search</button>
                </div>
            </div>
        </form>

        <!-- TV List -->
        <ul class="list-group">
            <% tvs.forEach(tv => { %>
                <li class="list-group-item">
                    <a href="/tvDetails/<%= tv._id %>"><%= tv.name %> - <%= tv.brand %></a>
                </li>
            <% }) %>
        </ul>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>

